@import "_normalize"
@import "_included_file"

body, html
  height 100vh

body
  background-image linear-gradient(45deg, #B066FE, #63E2FF)
  background-size 100% 100%
  
.keg
  height 100%
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  justify-content center
  align-items center
  
h1
  color white
  font-size 4em
  letter-spacing 0.1em
  font-weight 600
  text-transform uppercase
  border 0.12em dashed white
  padding 0.25em
  
::selection
  background rgba(#fff, 0.3)